<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".autentikasi.LoginActivity">

    <ImageView
        android:id="@+id/top_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_background_login"/>

    <TextView
        android:id="@+id/judul_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:text="Reminder"
        android:textColor="#199B33"
        android:textSize="34sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/judul_welcome"
        android:layout_below="@+id/judul_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#199B33"/>


    <EditText
        android:id="@+id/et_nik"
        android:layout_below="@+id/judul_welcome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableStart="@drawable/id_card"
        android:drawablePadding="16dp"
        android:layout_marginTop="52dp"
        android:layout_marginHorizontal="32dp"
        android:padding="16dp"
        android:textSize="16sp"
        android:ems="10"
        android:textColor="#199B33"
        android:textColorHint="#199B33"
        android:hint="No. Kartu BPJS/Email/Username"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_below="@+id/et_nik"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/icon_password"
        android:drawablePadding="16dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="32dp"
        android:padding="12dp"
        android:textSize="18sp"
        android:ems="10"
        android:textColor="#199B33"
        android:textColorHint="#199B33"
        android:hint="Password"
        android:inputType="textPassword"/>


    <LinearLayout
        android:layout_below="@id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:padding="20dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_pasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:padding="12dp"
            android:text="Login Pasien"
            android:textColor="#199B33"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/edittext_bg"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:padding="12dp"
            android:text="Login Apoteker"
            android:textColor="#199B33"/>

    </LinearLayout>
    


</RelativeLayout>